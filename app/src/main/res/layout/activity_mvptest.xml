<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MVPTestActivity">
   <EditText android:layout_width="match_parent"
             android:id="@+id/name"
             app:layout_constraintTop_toTopOf="parent"
             android:tooltipText="姓名"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:id="@+id/sex"
              app:layout_constraintTop_toBottomOf="@id/name"
              android:tooltipText="性别"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:id="@+id/age"
              app:layout_constraintTop_toBottomOf="@id/sex"
              android:tooltipText="年龄"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:id="@+id/save"
            android:text="保存"
            app:layout_constraintTop_toBottomOf="@id/age"
            android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:id="@+id/get"
              app:layout_constraintTop_toBottomOf="@id/save"
              android:tooltipText="姓名"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:id="@+id/getResult"
            android:text="获取"
            app:layout_constraintTop_toBottomOf="@id/get"
            android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/getResult"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">
        <TextView android:layout_width="0dp"
                               android:layout_weight="1"
                  android:id="@+id/log1"
                  android:layout_gravity="left"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/log2"
                  android:layout_gravity="right"
                  android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>